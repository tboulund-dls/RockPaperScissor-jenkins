pipeline {
    agent any
    triggers {
        pollSCM("* * * * *")
    }
    parameters {
        string defaultValue: "${BUILD_NUMBER}", name: 'DEPLOY_NUMBER', trim: true
    }
    stages {
        stage("Deploy") {
            environment {
                BUILD_NUMBER = "${DEPLOY_NUMBER}"
            }
            steps {
                sh "docker compose up -d"
            }
        }
    }
}